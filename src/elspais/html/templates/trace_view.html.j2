.header {
    background: white;
    border-bottom: 1px solid #e9ecef;
    padding: 16px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
}

.header-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #212529;
}

.header-stats {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
}

.stat-badge {
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
}

.stat-badge.prd { background: #212529; color: white; }
.stat-badge.ops { background: #fd7e14; color: white; }
.stat-badge.dev { background: #20c997; color: white; }
.stat-badge.core { background: #0d6efd; color: white; }
.stat-badge.files {
    background: white;
    color: #dc3545;
    border: 1px solid #dc3545;
}

.header-meta {
    display: flex;
    gap: 16px;
    align-items: center;
}

.version-badge {
    padding: 4px 8px;
    background: #e9ecef;
    border-radius: 4px;
    font-size: 0.75rem;
    color: #6c757d;
}

.legend-btn {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 6px 12px;
    background: #6c757d;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.875rem;
}

.legend-btn:hover {
    background: #5a6268;
}


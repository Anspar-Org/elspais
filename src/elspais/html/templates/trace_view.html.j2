// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

function toggleFilter(filter) {
    state.activeFilters[filter] = !state.activeFilters[filter];

    const btn = document.getElementById('btn-' + filter);
    btn.classList.toggle('active', state.activeFilters[filter]);

    applyFilters();
}

function clearFilters() {
    // Reset all filters
    state.activeFilters.uncommitted = false;
    state.activeFilters.changed = false;

    document.getElementById('btn-uncommitted').classList.remove('active');
    document.getElementById('btn-changed').classList.remove('active');

    document.getElementById('filter-id').value = '';
    document.getElementById('filter-title').value = '';
    document.getElementById('filter-level').value = '';
    document.getElementById('filter-status').value = '';
    document.getElementById('filter-cov').value = '';
    document.getElementById('filter-topic').value = '';

    document.getElementById('toggle-leaf').checked = false;
    document.getElementById('toggle-deprecated').checked = true;
    document.getElementById('toggle-roadmap').checked = true;
    document.getElementById('toggle-code').checked = false;

    applyFilters();
}


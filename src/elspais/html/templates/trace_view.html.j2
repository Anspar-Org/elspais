.toolbar {
    background: white;
    border-bottom: 1px solid #e9ecef;
    padding: 12px 24px;
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    align-items: center;
}

.btn-group {
    display: flex;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    overflow: hidden;

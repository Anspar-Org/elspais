.tree-cell {
    display: flex;
    align-items: center;
    gap: 4px;
}

.tree-indent {
    display: inline-block;
    width: 20px;
    flex-shrink: 0;
}

.tree-toggle {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #6c757d;
    flex-shrink: 0;
    border: none;
    background: none;
    font-size: 10px;
}

.tree-toggle:hover {
    color: #495057;

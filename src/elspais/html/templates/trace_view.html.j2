}

.tree-toggle.leaf {
    visibility: hidden;
}

.req-id {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 0.875rem;
    color: #0d6efd;
    text-decoration: none;
}

.req-id:hover {
    text-decoration: underline;
}

.assertion-badges {
    display: flex;
    gap: 2px;
    margin-left: 4px;
}

.assertion-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    background: #e7f1ff;
    color: #0d6efd;
    border-radius: 3px;
    font-size: 0.7rem;
    font-weight: 600;
}


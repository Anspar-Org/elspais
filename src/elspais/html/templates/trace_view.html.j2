.trace-table {
    width: 100%;
    border-collapse: collapse;
}

.trace-table th {
    background: #f8f9fa;
    padding: 12px 16px;
    text-align: left;
    font-weight: 600;
    color: #495057;
    border-bottom: 1px solid #e9ecef;
    position: sticky;
    top: 0;
    z-index: 10;
}

.trace-table td {
    padding: 10px 16px;
    border-bottom: 1px solid #f1f3f4;
    vertical-align: middle;
}

.trace-table tr:hover {
    background: #f8f9fa;
}

.trace-table tr.hidden {
    display: none;
}

/* Column widths */
.col-id { width: 180px; }
.col-title { min-width: 200px; }
.col-level { width: 70px; }
.col-status { width: 100px; }
.col-cov { width: 60px; text-align: center; }
.col-topic { width: 180px; }

/* Filter inputs in header */
.filter-input {
    width: 100%;
    padding: 6px 8px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    font-size: 0.75rem;
    margin-top: 6px;
}

.filter-select {
    width: 100%;
    padding: 6px 8px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    font-size: 0.75rem;
    margin-top: 6px;
    background: white;
}


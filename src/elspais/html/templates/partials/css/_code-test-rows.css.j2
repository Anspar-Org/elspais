/* Partial: _code-test-rows.css.j2 â€” Code/test/result row styling */

.code-row {
    background: #f8f9fa;
}

.code-row td {
    font-size: 0.8rem;
    color: #6c757d;
}

.code-icon {
    color: #6c757d;
    margin-right: 4px;
}

.test-row {
    background: #f0fff4;  /* Light green tint for tests */
}

.test-row td {
    font-size: 0.8rem;
    color: #198754;
}

.test-icon {
    margin-right: 4px;
}

/* Test Result Rows */
.result-row {
    background: #f8f9fa;
}

.result-row td {
    font-size: 0.75rem;
    color: #6c757d;
}

.result-row.passed {
    background: #d1e7dd;
}

.result-row.passed td {
    color: #0f5132;
}

.result-row.failed {
    background: #f8d7da;
}

.result-row.failed td {
    color: #842029;
}

.result-row.error {
    background: #fff3cd;
}

.result-row.error td {
    color: #664d03;
}

.result-row.skipped {
    background: #e2e3e5;
}

.result-row.skipped td {
    color: #41464b;
}

.result-icon {
    margin-right: 4px;
}

.result-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
}

.result-badge.passed {
    background: #d1e7dd;
    color: #0f5132;
}

.result-badge.failed {
    background: #f8d7da;
    color: #842029;
}

.result-badge.error {
    background: #fff3cd;
    color: #664d03;
}

.result-badge.skipped {
    background: #e2e3e5;
    color: #41464b;
}

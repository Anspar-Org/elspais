.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}

.status-badge.draft {
    background: #cfe2ff;
    color: #084298;
}

.status-badge.active {
    background: #d1e7dd;
    color: #0f5132;
}

.status-badge.deprecated {
    background: #f8d7da;
    color: #842029;
}

.status-badge.proposed {
    background: #fff3cd;
    color: #664d03;
}

.change-indicator {
    color: #fd7e14;
    font-size: 0.75rem;
}
